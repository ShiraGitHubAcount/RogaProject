@model LibraryManagementSystem.ViewModels.IBookCustomData

  
        <h2>Authors</h2>
        <div class="mb-3">
            <form id="searchForm" class="form-inline">
                <div class="form-group mr-2">
                    <input type="text" id="searchName" class="form-control" placeholder="Search by Author Name">
                </div>
                <button type="button" id="searchBtn" class="btn btn-primary">Search</button>
                <button type="button" id="addAuthorBtn" class="btn btn-success ml-2">Add Author</button>
            </form>
        </div>
<br />
        <table id="authorsTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Book Count</th>
                    <th style="width:100px">Actions</th>
                </tr>
            </thead>
            <tbody id="authorsBody">
                @foreach (var author in Model.AuthorBookData)
                {
                    <tr data-id="@author.AuthorID">
                        <td>@author.AuthorName</td>
                        <td>@author.Email</td>
                        <td>@author.Phone</td>
                        <td>@author.BookCount</td>
                        <td>
                            <button class="btn btn-warning edit-btn" title="Edit">
                                <i class="fas fa-pencil-alt"></i> 
                            </button>
                            <button class="btn btn-danger delete-btn" title="Delete">
                                <i class="fas fa-trash"></i> 
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="modal fade" id="addAuthorModal" tabindex="-1" role="dialog" aria-labelledby="addAuthorModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addAuthorModalLabel">Add Author</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form id="addAuthorForm">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="FirstName">First Name</label>
                                <input type="text" class="form-control" id="FirstName" name="FirstName" required>
                            </div>
                            <div class="form-group">
                                <label for="LastName">Last Name</label>
                                <input type="text" class="form-control" id="LastName" name="LastName" required>
                            </div>
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email" required>
                            </div>
                            <div class="form-group">
                                <label for="Phone">Phone</label>
                                <input type="text" class="form-control" id="Phone" name="Phone" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add Author</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="editAuthorModal" tabindex="-1" role="dialog" aria-labelledby="editAuthorModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editAuthorModalLabel">Edit Author</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form id="editAuthorForm">
                        <div class="modal-body">
                            <input type="hidden" id="EditAuthorID" name="AuthorID" />
                            <div class="form-group">
                                <label for="EditFirstName">First Name</label>
                                <input type="text" class="form-control" id="EditFirstName" name="FirstName" required>
                            </div>
                            <div class="form-group">
                                <label for="EditLastName">Last Name</label>
                                <input type="text" class="form-control" id="EditLastName" name="LastName" required>
                            </div>
                            <div class="form-group">
                                <label for="EditEmail">Email</label>
                                <input type="email" class="form-control" id="EditEmail" name="Email" required>
                            </div>
                            <div class="form-group">
                                <label for="EditPhone">Phone</label>
                                <input type="text" class="form-control" id="EditPhone" name="Phone" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    <script>
    $(document).ready(function() {
        $('#addAuthorBtn').click(function() {
            $('#addAuthorModal').modal('show');
        });

        $('#authorsTable').on('click', '.edit-btn', function() {
            var row = $(this).closest('tr');
            var authorId = row.data('id');
            var firstName = row.find('td').eq(0).text().split(' ')[0];
            var lastName = row.find('td').eq(0).text().split(' ')[1];
            var email = row.find('td').eq(1).text();
            var phone = row.find('td').eq(2).text();

            $('#EditAuthorID').val(authorId);
            $('#EditFirstName').val(firstName);
            $('#EditLastName').val(lastName);
            $('#EditEmail').val(email);
            $('#EditPhone').val(phone);

            $('#editAuthorModal').modal('show');
        });

        $('#addAuthorForm').submit(function(event) {
            event.preventDefault();
            $.ajax({
                url: '@Url.Action("New", "Authors")',
                type: 'POST',
                data: $(this).serialize(),
                success: function(result) {
                        $('#addAuthorModal').modal('hide');
                        location.reload();
                   
                },
                error: function() {
                    alert("An error occurred.");
                }
            });
        });

        $('#editAuthorForm').submit(function(event) {
            event.preventDefault();
            $.ajax({
                url: '@Url.Action("Update", "Authors")',
                type: 'POST',
                data: $(this).serialize(),
                success: function(result) {
                    if (result.success) {
                        alert('Author updated successfully');
                        location.reload();
                    } else {
                        alert(result.message);
                    }
                },
                error: function() {
                    alert("An error occurred.");
                }
            });
        });

        $('#authorsTable').on('click', '.delete-btn', function() {
            if (confirm('Are you sure you want to delete this author?')) {
                var row = $(this).closest('tr');
                var authorId = row.data('id');
                $.ajax({
                    url: '@Url.Action("Delete", "Authors")',
                    type: 'POST',
                    data: { id: authorId },
                    success: function(result) {
                            row.remove(); 
                        location.reload();
                    },
                    error: function() {
                        alert("An error occurred.");
                    }
                });
            }
        });

        $('#searchBtn').click(function() {
            var query = $('#searchName').val().toLowerCase();
            $('#authorsTable tbody tr').each(function() {
                var name = $(this).find('td').eq(0).text().toLowerCase();
                $(this).toggle(name.indexOf(query) > -1);
            });
        });
    });
    </script>

