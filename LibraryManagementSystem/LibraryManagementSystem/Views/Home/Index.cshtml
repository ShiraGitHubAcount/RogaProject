@model LibraryManagementSystem.ViewModels.HomePageViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="library-background" style="background-image: url('/path/to/library-image.jpg'); background-size: cover; padding: 50px 0;">
    <div class="container text-center">
        <h1 style="color:orange">Welcome to Our Library</h1>
        <p style="color:orange" class="lead">Discover our latest books and return borrowed books on time!</p>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="new-books-section" style="background-color: #f9f9f9; padding: 20px; border-radius: 10px;">
                <h2 class="text-center">Newly Released Books</h2>
                <div class="row">
                    @foreach (var book in Model.NewBooks.Take(3))
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div class="book-cover-placeholder">
                                        <i class="fas fa-book fa-5x"></i> <!-- Using Font Awesome for book icon -->
                                    </div>
                                    <h5 style="font-size: large; color: red; font-weight: bold;" class="card-title text-center mt-3">@book.Title</h5>
                                    <p class="card-text text-center">Published on: @book.PublishedDate.ToString("MMMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <div class="alert alert-warning" role="alert">
                <strong>Important:</strong> Please return borrowed books within two weeks or extend the loan period.
            </div>
        </div>
    </div>
</div>

<style>
    .library-background {
        text-align: center;
        color: white;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .new-books-section h2 {
        margin-bottom: 20px;
    }

    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        text-align: center;
    }

    .book-cover-placeholder {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 200px;
        background-color: #e9ecef;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .alert {
        font-size: 18px;
    }

    .fas.fa-book {
        color: #6c757d;
    }
</style>
